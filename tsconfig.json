{
  "include": ["src"],
  "compilerOptions": {
    "paths": {
      "@/*": ["./src/*", "./public/*"],
    },
    "target": "esnext",
    "lib": ["esnext", "dom"],
    "types": ["vite/client"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react"
  }
}
